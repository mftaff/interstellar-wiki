<%= form_for [wiki] do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
    </div>    
    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 12, class: 'form-control', placeholder: "Enter post body" %>
    </div> 
    <% unless current_user.standard? %>
        <div class="new-wiki-private-check-box form-group">
            <%= f.label :private, class: 'checkbox' do %>
                <%= f.check_box :private %> Check box if this Wiki is private?
            <% end %>
        </div>    
    <% end %> 
    <div class="form-group">
        <% if action_name == "new" %>
            <%= f.submit "Save", class: 'btn btn-success track-new-wiki' %>
        <% else %>
            <%= f.submit "Save", class: 'btn btn-success' %>
        <% end %>
    </div>
<% end %>