<div class="page-header">
    <h1><%= @wiki.title %></h1>
    <small>
        originally created <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.email %>
    </small>
</div>
<div class="row">
    <div class="col-md-8">
        <p><%= @wiki.body %></p>
    </div>
    <div class="col-md-4">
        <% if policy(@wiki).edit? %>
            <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>
        <% end %>
        <% if policy(@wiki).destroy?  %>
            <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete this wiki? This action cannot be undone."} %>
        <% end %>
    </div>
</div>
